{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["es2023"],
        "moduleDetection": "force",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "types": ["node"],
        "allowImportingTsExtensions": true,
        "strict": true,
        "noUnusedLocals": true,
        "declaration": true,
        "noEmit": true,
        "esModuleInterop": true,
        "isolatedDeclarations": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true
    },
    "include": ["src", "tests"],
    "exclude": ["tests/fixtures", "tests/rollup-plugin-dts"]
}
