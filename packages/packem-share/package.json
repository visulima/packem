{
    "name": "@visulima/packem-share",
    "version": "1.0.0-alpha.3",
    "description": "Shared types and helpers for packem.",
    "keywords": [
        "visulima",
        "packem-share"
    ],
    "homepage": "https://github.com/visulima/packem/tree/main/packages/packem-share",
    "bugs": {
        "url": "https://github.com/visulima/packem/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/visulima/packem.git",
        "directory": "packages/packem-share"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "./utils": {
            "types": "./dist/utils/index.d.mts",
            "default": "./dist/utils/index.mjs"
        },
        "./types": {
            "types": "./dist/types/index.d.mts",
            "default": "./dist/types/index.mjs"
        },
        "./constants": {
            "types": "./dist/constants/index.d.mts",
            "default": "./dist/constants/index.mjs"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "./dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "build": "../../node_modules/.bin/packem build --development",
        "build:prod": "../../node_modules/.bin/packem build --production",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "pnpm run build --watch",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint . --fix",
        "lint:package-json": "publint --strict",
        "lint:types": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@visulima/colorize": "1.4.23",
        "@visulima/fs": "3.1.5",
        "@visulima/package": "3.5.8",
        "@visulima/path": "1.4.0"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^16.2.19",
        "@anolilab/semantic-release-pnpm": "2.0.2",
        "@anolilab/semantic-release-preset": "^11.0.2",
        "@rollup/plugin-alias": "^5.1.1",
        "@rollup/pluginutils": "^5.2.0",
        "@rushstack/eslint-plugin-security": "^0.11.0",
        "@secretlint/secretlint-rule-preset-recommend": "^10.2.1",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/node": "24.0.14",
        "@visulima/pail": "2.1.25",
        "@visulima/tsconfig": "1.1.19",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "conventional-changelog-conventionalcommits": "9.1.0",
        "esbuild": "^0.25.6",
        "eslint": "^9.31.0",
        "hookable": "5.5.3",
        "jiti": "2.4.2",
        "rimraf": "^6.0.1",
        "rollup": "^4.45.1",
        "secretlint": "10.2.1",
        "semantic-release": "^24.2.7",
        "tempy": "^3.1.0",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    },
    "peerDependencies": {
        "rollup": "^4"
    },
    "engines": {
        "node": ">=20.* <=24.*"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
