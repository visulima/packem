{
    "name": "@visulima/packem-share",
    "version": "1.0.0-alpha.19",
    "description": "Shared types and helpers for packem.",
    "keywords": [
        "visulima",
        "packem-share"
    ],
    "homepage": "https://github.com/visulima/packem/tree/main/packages/packem-share",
    "bugs": {
        "url": "https://github.com/visulima/packem/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/visulima/packem.git",
        "directory": "packages/packem-share"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./utils": {
            "types": "./dist/utils/index.d.ts",
            "default": "./dist/utils/index.js"
        },
        "./types": {
            "types": "./dist/types/index.d.ts",
            "default": "./dist/types/index.js"
        },
        "./constants": {
            "types": "./dist/constants/index.d.ts",
            "default": "./dist/constants/index.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "./dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "build": "../../node_modules/.bin/packem build --development",
        "build:prod": "../../node_modules/.bin/packem build --production",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "pnpm run build --watch",
        "lint:attw": "attw --pack",
        "lint:eslint": "eslint . --cache --concurrency auto",
        "lint:eslint:fix": "eslint . --cache --concurrency auto --fix,",
        "lint:package-json": "publint --strict",
        "lint:prettier": "prettier --config=.prettierrc.cjs --check .",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write .",
        "lint:types": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@visulima/colorize": "catalog:visulima",
        "@visulima/fs": "catalog:visulima",
        "@visulima/package": "catalog:visulima",
        "@visulima/path": "catalog:visulima",
        "safe-stable-stringify": "catalog:prod"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "catalog:lint",
        "@anolilab/prettier-config": "catalog:lint",
        "@anolilab/semantic-release-pnpm": "catalog:cli",
        "@anolilab/semantic-release-preset": "catalog:cli",
        "@arethetypeswrong/cli": "catalog:dev",
        "@rollup/plugin-alias": "catalog:build",
        "@rollup/pluginutils": "catalog:build",
        "@secretlint/secretlint-rule-preset-recommend": "catalog:lint",
        "@total-typescript/ts-reset": "catalog:tsc",
        "@types/node": "catalog:types",
        "@visulima/pail": "catalog:visulima",
        "@visulima/tsconfig": "catalog:visulima",
        "@vitest/coverage-v8": "catalog:test",
        "@vitest/ui": "catalog:test",
        "conventional-changelog-conventionalcommits": "catalog:dev",
        "esbuild": "catalog:build",
        "eslint": "catalog:lint",
        "hookable": "catalog:dev",
        "jiti": "catalog:script",
        "prettier": "catalog:lint",
        "publint": "catalog:lint",
        "rimraf": "catalog:node",
        "rollup": "catalog:build",
        "secretlint": "catalog:lint",
        "semantic-release": "catalog:cli",
        "tempy": "catalog:dev",
        "typescript": "catalog:tsc",
        "vitest": "catalog:test"
    },
    "peerDependencies": {
        "rollup": "catalog:build"
    },
    "engines": {
        "node": ">=20.19 <=25.*"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
