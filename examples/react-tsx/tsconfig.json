{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src/**/*", "*.d.ts"],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2020",
        "module": "esnext",
        "jsx": "react-jsx",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler"
    }
}
