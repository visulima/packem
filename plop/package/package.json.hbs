{
    "name": "@visulima/{{packageName}}",
    "version": "0.0.0",
    "description": "{{description}}",
    "keywords": [
        "visulima",
        "{{packageName}}"
    ],
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "homepage": "https://github.com/visulima/packem/tree/main/packages/{{packageName}}",
    "license": "MIT",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./package.json": "./package.json"
    },
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "browser": "./dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/visulima/packem.git",
        "directory": "packages/{{packageName}}"
    },
    "bugs": {
        "url": "https://github.com/visulima/packem/issues"
    },
    "scripts": {
        "build": "packem build --development",
        "build:prod": "packem build --production",
        "clean": "rimraf node_modules dist .eslintcache",
        "dev": "pnpm run build --watch",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint . --fix",
        "lint:package-json": "publint --strict",
        "lint:types": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui --coverage.enabled=true",
        "test:watch": "vitest"
    },
    "engines": {
        "node": ">=20.* <=24.*"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^16.2.13",
        "@anolilab/semantic-release-pnpm": "2.0.0",
        "@anolilab/semantic-release-preset": "^11.0.0",
        "@secretlint/secretlint-rule-preset-recommend": "^10.1.1",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/node": "24.0.7",
        "@visulima/packem": "^1.28.2",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "conventional-changelog-conventionalcommits": "9.0.0",
        "esbuild": "^0.25.5",
        "eslint": "^9.30.0",
        "rimraf": "^6.0.1",
        "secretlint": "10.1.1",
        "semantic-release": "^24.2.6",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    }
}
